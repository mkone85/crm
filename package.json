{
  "name": "modular-crm-hosting",
  "version": "1.0.0",
  "description": "Modular CRM/Hosting SaaS & Self-Hosting Platform",
  "main": "apps/backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd apps/backend && npm run dev",
    "frontend:dev": "cd apps/frontend && npm start",
    "build": "npm run backend:build && npm run frontend:build",
    "backend:build": "cd apps/backend && npm run build",
    "frontend:build": "cd apps/frontend && npm run build",
    "start": "cd apps/backend && npm start",
    "install:all": "npm install && cd apps/backend && npm install && cd ../frontend && npm install",
    "db:migrate": "cd apps/backend && npm run db:migrate",
    "db:seed": "cd apps/backend && npm run db:seed"
  },
  "keywords": ["crm", "hosting", "saas", "self-hosting", "modular"],
  "author": "Marcell",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "netlify-cli": "^15.0.0"
  }
}
